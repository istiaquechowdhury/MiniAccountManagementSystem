@page
@model MiniAccountManagementSystem.Pages.Admin.AssignAccessModel
@{
}
<h2>Assign Module Access to Role</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form method="post">
    <div class="form-group">
        <label for="RoleId">Select Role</label>
        <select asp-for="model.RoleId" class="form-control" asp-items="Model.Roles">
            <option value="">-- Select Role --</option>
        </select>
        <span asp-validation-for="model.RoleId"class="bg-danger"></span>
    </div>

    <div class="form-group">
        <label for="ModuleId">Module</label>
        <select asp-for="model.ModuleId" class="form-control" asp-items="Model.Modules">
            <option value="">-- Select Module --</option>
        </select>
        <span asp-validation-for="model.ModuleId" class="bg-danger"></span>

    </div>

    <div class="form-check">
        <input class="form-check-input" asp-for="model.CanView" />
        <label class="form-check-label" for="CanView">Can View</label>
        <span asp-validation-for="model.CanView" class="bg-danger"></span>

    </div>

    <div class="form-check">
        <input class="form-check-input" asp-for="model.CanEdit" />
        <label class="form-check-label" for="CanEdit">Can Edit</label>
        <span asp-validation-for="model.CanEdit" class="bg-danger"></span>

    </div>

    <button type="submit" class="btn btn-primary mt-3">Assign Access</button>
</form>

