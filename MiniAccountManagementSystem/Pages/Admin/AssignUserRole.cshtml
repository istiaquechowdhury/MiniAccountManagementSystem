@page
@model MiniAccountManagementSystem.Pages.Admin.AssignUserRoleModel
@{
}
<h2>Assign Role to User</h2>

<form method="post">
    <div class="form-group">
        <label>User</label>
        <select asp-for="model.SelectedUserId" asp-items="Model.Users" class="form-control"></select>
        <span asp-validation-for="model.SelectedUserId" class="bg-danger"></span>
    </div>
    <div class="form-group">
        <label>Role</label>
        <select asp-for="model.SelectedRoleId" asp-items="Model.Roles" class="form-control"></select>
        <span asp-validation-for="model.SelectedRoleId"class="bg-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Assign Role</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info mt-3">@Model.Message</div>
}