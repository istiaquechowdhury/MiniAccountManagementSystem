@page
@model MiniAccountManagementSystem.Pages.Admin.AddUserModel
@{
}


<h2>Add New User</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form method="post">
    <div class="form-group">
        <label>Username</label>
        <input asp-for="model.UserName" class="form-control" />
        <span asp-validation-for="model.UserName"class="bg-danger"></span>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input asp-for="model.Password" type="password" class="form-control" />
        <span asp-validation-for="model.Password" class="bg-danger"></span>

    </div>
    <button type="submit" class="btn btn-primary">Add User</button>
</form>

