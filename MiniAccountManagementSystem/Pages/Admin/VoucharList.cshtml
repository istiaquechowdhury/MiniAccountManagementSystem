@page
@model MiniAccountManagementSystem.Pages.Admin.VoucharListModel
@{
}
<h2>Voucher List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Voucher Date</th>
            <th>Voucher Type</th>
            <th>Reference No</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model.Vouchers)
        {
            <tr>
                <td>@v.VoucherDate.ToString("yyyy-MM-dd")</td>
                <td>@v.VoucherType</td>
                <td>@v.ReferenceNo</td>
                <td>
                    <a asp-page="/Admin/VoucharDetails" asp-route-id="@v.VoucherId" class="btn btn-sm btn-info">View</a>
                </td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@v.VoucherId" onsubmit="return confirm('Are you sure you want to delete this voucher?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
               

            </tr>
        }
    </tbody>
</table>

